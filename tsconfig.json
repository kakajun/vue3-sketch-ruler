{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declarationDir": "types",
    "declaration": true,
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "types": ["vitest/globals"],
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*"]
}
